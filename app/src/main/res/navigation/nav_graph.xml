<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/AlarmsListFragment">

    <fragment
        android:id="@+id/CreateAlarmFragment"
        android:name="com.example.myalarmclock.fragment.CreateAlarmFragment"
        android:label="@string/create_alarm_fragment_label"
        tools:layout="@layout/create_alarm_fragment">

        <action
            android:id="@+id/action_CreateAlarmFragment_to_AlarmsListFragment"
            app:destination="@id/AlarmsListFragment" />
        <argument
            android:name="isCreate"
            app:argType="boolean"
            android:defaultValue="true" />
        <argument
            android:name="alarmId"
            app:argType="integer"
            android:defaultValue="0"/>
        <argument
            android:name="alarmName"
            app:argType="string"
            android:defaultValue='""' />
        <argument
            android:name="alarmHour"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="alarmMinute"
            app:argType="integer"
            android:defaultValue="0"/>
        <argument
            android:name="alarmIsRecurring"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="alarmIsMon"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="alarmIsTue"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="alarmIsWed"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="alarmIsThu"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="alarmIsFri"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="alarmIsSat"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="alarmIsSun"
            app:argType="boolean"
            android:defaultValue="false" />
    </fragment>
    <fragment
        android:id="@+id/AlarmsListFragment"
        android:name="com.example.myalarmclock.fragment.AlarmsListFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/alarms_list_fragment">

        <action
            android:id="@+id/action_AlarmsListFragment_to_CreateAlarmFragment"
            app:destination="@id/CreateAlarmFragment"/>
    </fragment>
</navigation>